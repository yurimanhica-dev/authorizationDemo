@model RoleViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Criar Role</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="RoleName" class="form-label"></label>
        <input asp-for="RoleName" class="form-control" />
        <span asp-validation-for="RoleName" class="text-danger"></span>
    </div>

    <h5>Permissions</h5>
    @for (int i = 0; i < Model.Permissions.Count; i++)
    {
        <div class="form-check">
            <input type="hidden" asp-for="Permissions[i].Name" />
            <input class="form-check-input" asp-for="Permissions[i].IsSelected" />
            <label class="form-check-label">@Model.Permissions[i].Name</label>
        </div>
    }

    <button type="submit" class="btn btn-primary">Create</button>
</form>